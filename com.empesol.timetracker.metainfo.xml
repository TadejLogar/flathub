<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>com.empesol.timetracker</id>
    <provides>
        <id>com.empesol.timetracker.desktop</id>
    </provides>
    <launchable type="desktop-id">com.empesol.timetracker.desktop</launchable>
    <name>Time Tracker for Ridango</name>
    <developer id="com.empesol.timetracker">
        <name>Tadej Logar</name>
    </developer>
    <summary>Track your daily work hours and monitor the progress of Jira tasks</summary>
    <metadata_license>MIT</metadata_license>
    <project_license>LicenseRef-proprietary</project_license>
    <content_rating type="oars-1.1"/>
    <url type="homepage">https://timetracker.empesol.com</url>

    <supports>
        <control>pointing</control>
        <control>keyboard</control>
        <control>touch</control>
    </supports>

    <description>
        <p>
            Track your daily work hours and monitor the progress of Jira tasks with Time Tracker.
        </p>
        <p>
            The application is designed for use by Ridango employees. To access all features, users must have a Ridango Jira account and a Ridango Bamboo HR account.
        </p>
    </description>

    <keywords>
        <keyword>time</keyword>
        <keyword>tracker</keyword>
    </keywords>

